
<% for( let i = 0; i < recipe.length; i++ ) { %>
<div class="col mb-5">
  <div class="card h-100">
    <!-- Sale badge-->
    <div
      class="badge bg-dark text-white position-absolute"
      style="top: 0.5rem; right: 0.5rem"
    >
      <%= recipe[i].difficulty %>
    </div>
    <!-- Product image-->
    <img
      class="card-img-top"
      src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg"
      alt=".."
    />
    <!-- Product details-->
    <div class="card-body p-4">
      <div class="text-center">
        <!-- Product name-->
        <h5 class="fw-bolder"><%= recipe[i].title %></h5>
        <!-- Product author-->
        <h5 class="fw-bolder">By: <%= recipe[i].author %></h5>
        <!-- Product price-->
      </div>
    </div>
    <!-- Product actions-->
    <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
      <div class="text-center">
        <a class="btn btn-outline-dark mt-auto" href="#">View recipe</a>
      </div>
    </div>
  </div>
</div>
<% } %>
