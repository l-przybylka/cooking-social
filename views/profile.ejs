<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
    <div class="col-6">
      <%# User section and add post %>

      <div>
        <p><strong>User Name</strong>: <%= user.userName %></p>
        <p><strong>Email</strong>: <%= user.email %></p>
        <a href="/logout" class="col-3 btn btn-primary">Logout</a>
      </div>
      <div class="mt-5">
        <%# Post %>

        <h2>Add a recipe</h2>
        <for m action="#" enctype="multipart/form-data" method="POST">
          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input
              type="text"
              placeholder="My tasty new recipe..."
              class="form-control"
              id="title"
              name="title"
            />
          </div>
          <div class="mb-3">
            <ul class="input-group">
              <li class="input-group-text list-group-item-success">
                <input type="radio" name="difficulty" value="Easy" id="easy"/>
                <label for="easy">Easy</label>
              </li>
              <li class="input-group-text list-group-item-warning">
                <input type="radio" name="difficulty" value="Moderate" id="moderate"/>
                <label for="moderate">Moderate</label>
              </li>
              <li class="input-group-text list-group-item-danger">
                <input type="radio" name="difficulty" value="Hard" id="hard" />
                <label for="hard">Hard</label>
              </li>
            </ul>
          </div>
          <div class="mb-3">
            <label for="instructions" class="form-label">Instructions</label>
            <textarea
              class="form-control"
              placeholder="Here is how to make it..."
              id="instructions"
              name="instructions"
            ></textarea>
          </div>
          <div class="mb-3">
            <label for="imgUpload" class="form-label">Image</label>
            <input
              type="file"
              class="form-control"
              id="imageUpload"
              name="file"
            />
          </div>
          <button type="submit" class="btn btn-primary" value="Upload">
            Submit
          </button>
        </form>

        <%# Current posts by the user %>
      </div>
    </div>
  </div>
</div>

<div class="col-6">
  <ul class="row list-unstyled">
  <% for(var i=0; i<posts.length; i++) {%>
    <li class="col-6 justify-content-between mt-5">
      <a href="/post/<%= posts[i]._id%>">
        <img class="img-fluid" src="<%= posts[i].image%>">
      </a>
    </li>
  <% } %>
  </ul>
  <div class="row justify-content-center mt-5">
    <a class="btn btn-primary" href="/recipes">Return to Feed</a>
  </div>  
</div>  
</div>
</div>
</div>
<%- include('partials/footer') -%>