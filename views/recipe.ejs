<%- include('partials/header') -%>
  <div class="container">
    <div class="row">
      <h2>
        <%= post.title %>
      </h2>

      <div class="col-12 col-md-6">
        <img class="img-fluid" src="<%=post.image%>" />
      </div>
      <div class="col-12">
        <div class="row justify-content-between">
          <form class="col-1" action="/recipes/likeRecipe/<%=post.id %>?_method=PUT" method="POST">
            <button class="btn btn-primary fa fa-heart" type="submit"></button>
          </form>
          <h3 class="col-3">Likes: <%=post.likes %>
          </h3>
          <%if(post.user==user.id){ %>
            <form action="/recipes/deleteRecipe/<%=post.id %>?_method=DELETE" method="POST" class="col-3">
              <button class="btn btn-primary fa fa-trash" type="submit"></button>
            </form>
            <%}%>
        </div>
        <h2>comments</h2>
        <ul>
          <% for(let i=0; i<comments.length; i++) {%>
            <li class="col-6 justify-content-between mt-5">
              <span class="text-info">
                <%=comments[i].user.userName%>:
              </span> <span class="text-secondary">
                <%=comments[i].comment%>
              </span>

              <div class="row">
                <span class="text-muted col-1">Likes: <%=comments[i].likes %></span>
                <form class="col-1" action="/comment/likeComment/<%=comments[i]._id %>?_method=PUT" method="POST">
                  <button class="btn btn-primary fa fa-heart" type="submit"></button>
                </form>
                <%if(post.user==user.id || comments[i].user._id==user.id){ %>
                  <form action="/comment/deleteComment/<%=comments[i].id%>?_method=DELETE" method="POST" class="col-1">
                    <button class="btn btn-primary fa fa-trash" type="submit"></button>
                  </form>
                  <%}%>
              </div>

            </li>

            <% } %>
        </ul>

        <div class="mt-5">
          <h2>Add a comment:</h2>
          <form action="/comment/createComment/<%=post._id%>" method="POST">
            <div class="mb-3">
              <input type="text" class="form-control" id="comment" name="comment">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
      </div>
      <div class="col-6 mt-5">
        <a class="btn btn-primary" href="/profile">Return to Profile</a>
        <a class="btn btn-primary" href="/feed">Return to Feed</a>
      </div>
    </div>
  </div>
  <%- include('partials/footer') -%>